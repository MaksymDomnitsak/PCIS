@model IEnumerable<Lab4.Models.UniversityTeacher>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatronymicName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionHourlyRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountReadHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstSubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondSubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkPlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characteristics)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatronymicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionHourlyRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountReadHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstSubjectNameNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondSubjectNameNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionNameNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkPlaceNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Characteristics)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
